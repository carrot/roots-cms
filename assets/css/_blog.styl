#blog
  background: #f7f7f7 url('/img/noise.png')

  #hero
    width: 100%
    text-align: center
    color: #fff
    font-weight: bold
    font-size: 3.333333333em
    padding: 2em 0
    background-color: #8dc63f
    background-image: url('/img/blog/icons_tile.svg')
    background-repeat: repeat

    a
      reset-link()

  #nav
    background: #fff
    color: #B7B7B7
    upcase()
    border-bottom: 1px solid #E5E5E5
    text-align: center

    ul
      inline-list: 0
      margin: 0 auto
      width: 440px

      @media only screen and (max-width: 400px)
        width: 320px

    li
      bold()
      fs: 1.1em
      padding: 1.2em 3em
      border-right: 1px solid #E5E5E5
      cursor: pointer
      transition()

      @media only screen and (max-width: 400px)
        padding: 1.2em 1.8em

      &:hover
        color: green

      &:last-child
        border-right: none

      a
        color: inherit
        text-decoration: none

  #collection-view
    display: none
    border-bottom: 1px solid #E5E5E5
    background: #F9F9F9
    group()

    a
      text-decoration: none

    ul
      inline-list: 0
      max-width: 825px
      margin: 25px auto

      @media only screen and (max-width: 800px)
        max-width: 555px

      @media only screen and (max-width: 555px)
        max-width: 292px

    li
      background: #fff
      box-shadow: 5px 5px 0 rgba(#000,.15)
      width: 247px
      margin: 0 20px 20px 20px
      cursor: pointer

      .top
        background-color: #8dc63f
        background-image: url('/img/blog/icons_tile.svg')
        background-repeat: repeat
        text-align: center
        height: 180px
        position: relative

        img
          position: absolute
          top: 0
          left: 0
          right: 0
          bottom: 0
          margin: auto

      .bottom
        text-align: center
        color: #B6B5B5

  #main
    max-width: 780px
    margin: 50px auto

    @media only screen and (max-width: 750px)
      padding: 0 20px

    a
      color: green

    .next-page
      text-align: center
      padding: 20px 0 30px

      a
        background: #c7c7c7
        padding: 10px 20px
        color: #fff
        round: 3px
        upcase()
        bold()
        inline-block()
        cursor: pointer
        transition()
        hover-darken: 5%
        box-shadow: 0 2px 0 rgba(#000,.3)

      &.done a
        background: none
        color: #ccc
        cursor: default
        box-shadow: none

        &:hover
          background: none

    .single-footer
      text-align: center

      .back
        text-decoration: none
        color: white
        background: #C7C7C7
        margin: 0 auto
        padding: 10px 25px
        round: 3px
        inline-block()
        bold()
        upcase()
        hover-darken()
        transition()

    .post
      group()
      border: 1px solid #E0E0E0
      margin-bottom: 40px
      box-shadow: 5px 5px 0 rgba(#000,.07)
      display: none

      &.p1, &.single
        display: block

      .header
        display: block
        group()
        background: #C2C1C3 url('../img/blog/post_tile.svg') repeat
        text-decoration: none
        color: #fff
        padding: 25px

        &.single, &:hover
          background: #8dc63f url('/img/blog/icons_tile.svg') repeat -7px -16px

        img
          max-width: 65px
          max-height: 65px
          border: 5px solid #fff
          box-shadow: 4px 4px 0 rgba(#000,.1)
          float: left
          margin-right: 20px

        h2
          fs: 1.5em
          margin: 0
          color: #fff
          text-shadow: 1px 1px 1px rgba(#000,.1)
          margin-top: 15px

        small
          color: #fff

      .body
        background: #fff
        clear: both
        group()

        p
          font-size: 1.05em
          color: #555
          line-height: 1.7em

        .meta
          opacity: 1
          group()
          padding: 20px 40px
          margin: 0
          margin-bottom: -36px
          font-size: 1.2em

          date
            font-size: .8em

      .contents
        padding: 20px 40px

        @media only screen and (max-width: 400px)
          padding: 20px 30px
          font-size: .9em

      .social-shares
        padding: 20px 0
        background: #F5F5F5
        border-top: 1px solid #E3E3E3
        border-bottom: 1px solid #E3E3E3

        .share
          margin: 0 auto

      .comments
        padding: 20px 40px

      .snippet
        padding: 10px 25px 5px 25px
        group()

        img
          display: none
                    
        .continue
          margin-top: -7px
          margin-bottom: 10px
          display: block
          bold()
          text-decoration: none
          color: #A8A8A8
          transition()

          &:hover
            color: darken(@color, 15%)

      .details
        group()
        padding: 0 25px 20px 25px

      date
        color: black
        float: right
        bold()

      .category
        reset-link()
        color: green
        float: left
        bold()
        fs: 1.1em
        text-transform: capitalize

    p
      line-height: 1.5em

      & > code
        color: orange
        bold()

      a
        color: green
        bold()
        text-decoration: none
        border-bottom: 1px solid transparent
        transition()

        &:hover
          border-bottom: 1px solid

    h2
      margin-bottom: 5px

    h3
      border-bottom: 1px solid rgba(#000,.1)
      padding-bottom: 3px

    .meta
      fs: .8em
      opacity: .4
      margin-bottom: 15px

    pre code
      padding: 20px

    li
      margin-bottom: 7px

      & > code
        color: orange
        bold()

    blockquote
      border-left: 4px solid green
      padding-left: 20px
      margin: 25px 0

    img
      max-width: 100%
